<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_height"
                android:scaleType="centerCrop"
                android:src="@drawable/dolomites2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="@string/mountains_quiz"
                android:textColor="@color/blue"
                android:textSize="@dimen/title_text" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/paddingLeft">

            <EditText
                android:id="@+id/field_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/name_margin"
                android:layout_marginRight="@dimen/name_margin"
                android:layout_marginTop="@dimen/name_margin"
                android:hint="@string/enter_name"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q1" />

            <EditText
                android:id="@+id/q1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/q1_height"
                android:layout_marginBottom="@dimen/name_margin"
                android:layout_marginRight="@dimen/name_margin"
                android:hint="@string/type_here"
                android:inputType="textCapWords"
                android:textSize="@dimen/q1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/qa_margin"
                android:text="@string/q2" />


            <RadioGroup
                android:id="@+id/radioGroup_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/name_margin"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_q2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q2_a"></RadioButton>

                <RadioButton
                    android:id="@+id/radio_q2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q2_b"></RadioButton>

                <RadioButton
                    android:id="@+id/radio_q2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q2_c"></RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/qa_margin"
                android:text="@string/q3" />


            <RadioGroup
                android:id="@+id/radioGroup_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/name_margin"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_q3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_a"></RadioButton>

                <RadioButton
                    android:id="@+id/radio_q3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_b"></RadioButton>

                <RadioButton
                    android:id="@+id/radio_q3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_c"></RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/qa_margin"
                android:text="@string/q4" />


            <RadioGroup
                android:id="@+id/radioGroup_q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/name_margin"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_q4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q4_a"></RadioButton>

                <RadioButton
                    android:id="@+id/radio_q4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q4_b"></RadioButton>

                <RadioButton
                    android:id="@+id/radio_q4c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q4_c"></RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/qa_margin"
                android:text="@string/q5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_q5a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q5_a" />

                <CheckBox
                    android:id="@+id/checkbox_q5b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q5_b" />

                <CheckBox
                    android:id="@+id/checkbox_q5c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/name_margin"
                    android:text="@string/q5_c" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/qa_margin"
                android:text="@string/q6" />

            <RadioGroup
                android:id="@+id/radioGroup_q6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_q6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q6_a"></RadioButton>

                <RadioButton
                    android:id="@+id/radio_q6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q6_b"></RadioButton>

                <RadioButton
                    android:id="@+id/radio_q6c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q6_c"></RadioButton>
            </RadioGroup>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_height"
            android:paddingLeft="@dimen/paddingLeft"
            android:src="@drawable/gora8" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/name_margin"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:onClick="submitPoints"
            android:stateListAnimator="@null"
            android:text="@string/submit_button"
            android:textColor="@color/button_text"
            android:textSize="@dimen/button_text"
            android:theme="@style/BlueButton" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/paddingLeft" />

        <Button
            android:id="@+id/email_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/name_margin"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:onClick="scoreButton"
            android:stateListAnimator="@null"
            android:text="@string/send_button"
            android:textColor="@color/button_text"
            android:textSize="@dimen/button_text"
            android:theme="@style/BlueButton"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/name_margin"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:onClick="resetButton"
            android:stateListAnimator="@null"
            android:text="@string/try_button"
            android:textColor="@color/button_text"
            android:textSize="@dimen/button_text"
            android:theme="@style/Blue2Button" />

    </LinearLayout>
</ScrollView>